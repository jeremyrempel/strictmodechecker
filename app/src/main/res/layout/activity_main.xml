<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_ignorev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ignore Violation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_crashv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crash Violation"
        app:layout_constraintEnd_toEndOf="@+id/btn_ignorev"
        app:layout_constraintStart_toStartOf="@+id/btn_ignorev"
        app:layout_constraintTop_toBottomOf="@+id/btn_ignorev" />

</androidx.constraintlayout.widget.ConstraintLayout>